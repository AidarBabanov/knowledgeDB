<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aidar.knowledgedb">

    <application
        android:name=".KnowledgeDB"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MainTheme">

        <!-- <activity -->
        <!-- android:name=".activities.MainActivity" -->
        <!-- android:label="@string/app_name" -->
        <!-- android:theme="@style/NoActionBarTheme"></activity> -->
        <activity
            android:name=".activities.IssueActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activities.SolveIssueActivity"
            android:label="@string/title_activity_solveIssue"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.AnswerActivity"
            android:label="@string/title_activity_answer"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name=".activities.Main2Activity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/MainTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.topicActivity"></activity>
    </application>

</manifest>